{
    "name": "soare-robert-daniel/simple-sql-query-analyzer",
    "description": "A simple SQL query analyzer for WordPress",
    "authors": [
        {
            "name": "Soare Robert-Daniel",
            "email": "soare.robert.daniel@protonmail.com"
        }
    ],
    "require-dev": {
        "wp-coding-standards/wpcs": "^3.0",
        "szepeviktor/phpstan-wordpress": "^2.0",
        "phpstan/phpstan": "^2.1"
    },
    "scripts": {
        "phpstan": "phpstan analyse -c phpstan.neon --memory-limit=2G",
        "lint": "phpcs",
        "lint:fix": "phpcbf"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
